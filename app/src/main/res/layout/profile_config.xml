<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="修改资料"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="用户名称"
            android:id="@+id/usernameTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="New Text"
            android:id="@+id/username"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/usernameFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="真实姓名"
            android:id="@+id/nameTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/name"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/nameFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="旧密码"
            android:id="@+id/oldPwdTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/oldPwd"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/oldPwdFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="新密码"
            android:id="@+id/newPwdTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/newPwd"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/newPwdFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="新密码确认"
            android:id="@+id/newPwdCfmTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/newPwdCfm"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/newPwdCfmFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="联系电话"
            android:id="@+id/phoneTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/phone"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/phoneFlag"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:textColor="#ffff3032" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="邮箱"
            android:id="@+id/mailTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/mail"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="部门名称"
            android:id="@+id/departTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/depart"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="角色"
            android:id="@+id/roleTextView"
            android:textSize="30sp"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:id="@+id/role"
            android:layout_weight="0"
            android:text="test"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:text="备注"
            android:id="@+id/remarkTextView"
            android:textSize="30sp"
            android:gravity="top|left"
            android:paddingLeft="20dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/remark"
            android:layout_weight="0"
            android:text="test"
            android:gravity="top|left" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.1"
        android:gravity="bottom|right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:id="@+id/configConfirm"
            android:background="@drawable/setrec_bg"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:layout_marginRight="15dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/configCancel"
            android:background="@drawable/setrec_bg"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>